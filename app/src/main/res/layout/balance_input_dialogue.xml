<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recharge"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/nametext"
        android:layout_below="@+id/titletxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:textSize="16sp"
        android:layout_marginLeft="25dp" />

    <TextView
        android:id="@+id/balancetext"
        android:layout_below="@+id/nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="25dp"
        android:textSize="16sp"
        android:layout_marginLeft="25dp" />

    <EditText
        android:id="@+id/editbalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/balancetext"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:hint="@string/enter_recharge_amount"
        android:inputType="number"/>

    <Button
        android:id="@+id/cancelbtn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editbalance"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="86dp"
        android:layout_toStartOf="@+id/rchgbtn"
        android:layout_toLeftOf="@+id/rchgbtn"
        android:text="@string/cancel" />

    <Button
        android:id="@+id/rchgbtn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editbalance"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/recharge"
        android:textColor="#FFFFFF" />



</RelativeLayout>